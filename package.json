{
  "name": "react-three-fiber-101",
  "private": true,
  "description": "A Rubik's cube made with react-three-fiber",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "gatsby develop -H 0.0.0.0 -p 3000",
    "build": "gatsby build",
    "start": "gatsby develop",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{ts,tsx,json,md}\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format lint build",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.ts": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "rqbazan-ts/react",
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src",
            "static"
          ]
        }
      }
    },
    "rules": {
      "import/extensions": "off"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@use-it/event-listener": "^0.1.3",
    "firebase": "^7.6.0",
    "gatsby": "^2.18.11",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^3.29.0",
    "react-three-fiber": "^3.0.16",
    "tailwindcss": "^1.1.4",
    "three": "^0.111.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-typescript": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.3",
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "eslint-config-rqbazan-ts": "^0.3.0",
    "gatsby-plugin-postcss": "^2.1.18",
    "gatsby-plugin-svgr-loader": "^0.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.3"
  }
}
